<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp25"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="9"
                    android:width="0dp"
                    android:padding="@dimen/dp10"
                    android:text="@string/system_name"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp25"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/layout1">

                        <TextView
                            style="@style/gaojishezhi_left_text"
                            android:text="@string/banbengengxin"
                            />


                        <TextView
                            android:id="@+id/version_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp20"
                            android:background="@drawable/border_blue_selector"
                            android:paddingBottom="@dimen/dp3"
                            android:paddingLeft="@dimen/dp20"
                            android:paddingRight="@dimen/dp20"
                            android:paddingTop="@dimen/dp3"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/sp17"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/layout1">

                        <TextView

                            style="@style/gaojishezhi_left_text"
                            android:text="@string/zhongduanmingcheng"/>

                        <TextView
                            android:id="@+id/terminal_name"
                            style="@style/gaojishezhi_rigth_text"
                            android:text="@string/app_name"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10">

                        <TextView
                            style="@style/gaojishezhi_left_text"
                            android:text="@string/shouquanma"
                            />

                        <TextView
                            android:id="@+id/shouquanma_tv"
                            style="@style/gaojishezhi_rigth_text"

                            android:text="shouquanma_tv"
                            />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/layout1"
                        >

                        <TextView

                            style="@style/gaojishezhi_left_text"
                            android:text="@string/ip_address"/>

                        <TextView
                            android:id="@+id/ip_address_tv"
                            style="@style/gaojishezhi_rigth_text"
                            android:text="ip_address_tv"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/layout1"
                        >

                        <TextView
                            style="@style/gaojishezhi_left_text"
                            android:text="@string/caozuoxitong"
                            />

                        <TextView
                            style="@style/gaojishezhi_rigth_text"
                            android:text="@string/caozuoxitong_name"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp25"/>

                        <TextView
                            android:id="@+id/unbind_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="9"
                            android:width="0dp"
                            android:background="@drawable/border_red_selector"
                            android:gravity="center"
                            android:padding="@dimen/dp10"
                            android:text="@string/jiebangzhongduan"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/sp25"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp25"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/color_666666"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="9"
                        android:width="0dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp10"
                        android:text="@string/zhongduanpeizhi"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp25"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/zhongduanpeizhi1"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp20"/>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"/>
                    </RelativeLayout>

                    <View
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@drawable/horizontal_dash_line"
                        android:layerType="software"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/zhongduanpeizhi2"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp20"/>

                        <Switch
                            android:id="@+id/shifoufayinxiaofeixiaopiao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@drawable/horizontal_dash_line"
                        android:layerType="software"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/zhongduanpeizhi3"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp20"/>

                        <TextView
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@drawable/horizontal_dash_line"
                        android:layerType="software"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/zhongduanpeizhi4"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp20"/>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"/>
                    </RelativeLayout>

                    <View
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@drawable/horizontal_dash_line"
                        android:layerType="software"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/zhongduanpeizhi5"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp20"/>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"/>
                    </RelativeLayout>

                    <View
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@drawable/horizontal_dash_line"
                        android:layerType="software"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:text="@string/zhongduanpeizhi6"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp20"/>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"/>
                    </RelativeLayout>

                    <View
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@drawable/horizontal_dash_line"
                        android:layerType="software"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>