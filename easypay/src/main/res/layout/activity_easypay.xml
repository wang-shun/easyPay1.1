<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/easypay_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:background="@color/corlor_status_fade"
        >

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:text="2017-7-19 18:20"
            android:textSize="@dimen/sp30"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/logo_img"
                android:text="奥琦玮收银台"
                android:textSize="@dimen/sp30"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="卓sir"
            android:textSize="@dimen/sp30"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:text="单号: 17064"
            android:textColor="@color/color_333333"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/easypay_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="10"
                android:background="@drawable/border_orange_selector"
                android:gravity="right"
                android:hint="0.00"
                android:paddingRight="@dimen/dp20"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp70"/>

            <TextView
                android:id="@+id/easypay_progress_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="等待顾客支付..."
                android:textColor="@color/color_ff0000"
                android:textSize="@dimen/sp50"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/easypay_btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="删"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"
                android:visibility="gone"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_wechat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"
                android:visibility="gone"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:visibility="gone"></View>

            <TextView
                android:id="@+id/easypay_cash"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="现金"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/easypay_btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn5"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:visibility="gone"></View>

            <TextView
                android:id="@+id/easypay_btn_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"
                android:visibility="gone"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="清"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:visibility="gone"></View>

            <TextView
                android:id="@+id/easypay_ali"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="支付宝"
                android:textColor="@color/white"
                android:textSize="@dimen/sp60"
                android:visibility="gone"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_member"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="一"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/easypay_btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:visibility="gone"></View>

            <TextView
                android:id="@+id/easypay_btn_equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="="
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"
                android:visibility="gone"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_staff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="二"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="三"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"
                />

            <TextView
                android:id="@+id/easypay_swift_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/easypay_btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/easypay_btn_dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="."
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp80"/>


            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp10"
                android:layout_weight="2"
                android:background="@drawable/border_orange_selector"
                android:gravity="center"
                android:text="深圳奥琦玮"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp60"/>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>