<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/bg_color_white_with_10_corner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.acewill.ordermachine.widget.RingProgressBar
            android:layout_marginTop="@dimen/dp50"
            android:id="@+id/progress_bar_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:max="100"
            app:ringColor="@color/color_e6e6e6"
            app:ringProgressColor="@color/color_blue"
            app:ringWidth="5dp"
            app:style="STROKE"
            app:textColor="@color/color_blue"
            app:textIsShow="true"
            app:textSize="26sp"/>
    </RelativeLayout>
</LinearLayout>