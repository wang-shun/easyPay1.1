<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@color/color_white"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/color_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/yunfuwuxuanze"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp25"/>

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/close_img"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:text="*提示:非技术人员请勿更改配置!误入请关闭，谢谢!"
            android:textColor="@color/color_black"
            android:textSize="16sp"/>

        <RadioGroup
            android:id="@+id/environment_choose_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/environment_choose_rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="www.smarant.com(默认，供门店使用的生产环境)"
                android:textColor="@color/color_666666"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/environment_choose_rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="sz.canxingjian.com(供技术部门使用的调试环境)"
                android:textColor="@color/color_666666"
                android:textSize="16sp"/>

        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/btn"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp25"
        android:layout_marginTop="@dimen/dp25"
        android:background="@drawable/border_blue_selector"
        android:padding="@dimen/dp5"
        android:text="@string/baocun"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp25"/>

</LinearLayout>