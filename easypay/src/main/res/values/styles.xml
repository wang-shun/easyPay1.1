    <style name="Table_Text_Style">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp40</item>
    </style>

    <style name="Num_Style" parent="Table_Text_Style">
        <item name="android:background">@drawable/num_btn_selector_gray</item>
        <item name="android:layout_marginLeft">@dimen/dp10</item>
    </style>

    <style name="Pay_Tv_Style" parent="Table_Text_Style">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/num_btn_selector_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp40</item>
    </style>

    <style name="Table_Text_Style_Member_Manager" parent="Table_Text_Style">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:layout_marginBottom">@dimen/zero_point_one</item>
        <item name="android:layout_marginLeft">@dimen/zero_point_one</item>
        <item name="android:layout_marginTop">@dimen/zero_point_one</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <style name="Table_Text_Style_Member_Manager_Left" parent="Table_Text_Style_Member_Manager">
        <item name="android:textColor">@color/gray</item>
    </style>



    <style name="Table_Text_Style_Member_Manager_Right" parent="Table_Text_Style_Member_Manager">
        <item name="android:textColor">@color/color_4B4B4B</item>
    </style>
    <!-- 下划线 -->
    <style name="sty_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:background">@color/gray</item>
    </style>
    <!--ListView样式-->
    <style name="listView_style">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--自定义键盘样式-->
    <style name="keyboardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:keyBackground">@drawable/key_btn_selector</item>
        <item name="android:keyTextColor">@color/gray_search_text</item>
        <item name="android:keyTextSize">@dimen/sp26</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:shadowColor">@color/half_trans</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:keyPreviewLayout">@layout/key_preview</item><!--我给设置透明了-->
        <item name="android:keyPreviewOffset">5dp</item>
    </style>
    <style name="layout1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item><!--我给设置透明了-->
        <item name="android:padding">@dimen/dp5</item>
    </style>

    <style name="gaojishezhi_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item><!--我给设置透明了-->
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="gaojishezhi_rigth_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_666666</item><!--我给设置透明了-->
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:paddingLeft">@dimen/dp10</item>
    </style>
</resources>